<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:andorid="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascotas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/imgMascotacv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_foto_mascota"
            android:scaleType="centerCrop"
            android:src="@drawable/connor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageButton
                android:id="@+id/hueso_blancocv"
                android:layout_width="@dimen/size_iconos_hueso"
                android:layout_height="@dimen/size_iconos_hueso"
                android:layout_marginLeft="15dp"
                android:background="@drawable/dog_bone_50" />

            <TextView
                android:id="@+id/tvNombreMascotacv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="@dimen/TextSize_card_view"
                android:layout_marginLeft="25dp"/>

            <TextView
                android:id="@+id/tvTotRatingcv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="25dp"
                android:text="@string/Rating"
                android:textSize="@dimen/TextSize_card_view" />

            <ImageButton
                android:id="@+id/hueso_amarillocv"
                android:layout_width="@dimen/size_iconos_hueso"
                android:layout_height="@dimen/size_iconos_hueso"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:background="@drawable/dog_bone_48" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
